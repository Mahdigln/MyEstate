@model Core.DTOs.RegisterViewModel
@{
    ViewData["Title"] = "ثبت نام";
}
<div class="user-area pt-100 pb-70">
    <div class="container">
        <div class="user-width">
            <div class="user-form">
                <div class="contact-form">
                    <h2>همین الان ثبت نام کن</h2>
                    <form  asp-action="Register" method="post" >
                        <div class="row">
                            @if (ViewBag.IsSuccess != null) @* !=null == true*@
                            {
                                <div class="alert alert-success">
                                    <p class="help-block">ثبت نام با موفقیت انجام شد</p>
                                </div>

                                <script>
                                    //Your delay in milliseconds
                                    var delay = 6000;
                                    setTimeout(function() { window.location = "https://localhost:7172/Login"; }, delay);
                                </script>
                            }
                            <div class="col-lg-12 ">
                                <div class="form-group">
                                    <input type="text" asp-for="UserName" class="form-control" placeholder="نام کاربری را وارد کنید">
                                    <span asp-validation-for="UserName"></span>
                                </div>
                            </div>


                            <div class="col-lg-12 ">
                                <div class="form-group">
                                    <input type="email" asp-for="Email" class="form-control" placeholder="ایمیل را وارد کنید">
                                    <span asp-validation-for="Email"></span>

                                </div>
                            </div>

                            <div class="col-12">
                                <div class="form-group">
                                    <input asp-for="Password" type="password" class="form-control" placeholder="پسورد را وارد کنید">
                                    <span asp-validation-for="Password"></span>
                                </div>
                            </div>

                            <div class="col-12">
                                <div class="form-group">
                                    <input class="form-control" type="password" asp-for="RePassword" placeholder="پسورد را دوباره وارد کنید">
                                    <span asp-validation-for="RePassword"></span>
                                </div>
                            </div>

                            <div class="col-lg-12 ">
                                <button class="default-btn btn-bg-three">
                                    ثبت نام
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>